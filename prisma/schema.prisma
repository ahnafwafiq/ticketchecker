generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Participant {
  id                Int      @id @default(autoincrement())
  uid               String   @unique @default(dbgenerated("substr(md5(random()::text), 1, 8)")) // 8-char unique ID
  name              String
  email             String   @unique
  phone             String
  institution       String
  grade             String
  emergencyContact  String
  createdAt         DateTime @default(now())
}